<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grade_pedido_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbotao"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grade_pedido_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewLabelPed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="@string/label_pedido"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewGradePedidoQ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/grade_pedido_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pedidoconta"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/colorbotao"
            android:src="?attr/actionModePasteDrawable" />

        <ImageButton
            android:id="@+id/pedidocontaabrir"
            android:background="@color/colorbotao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="?attr/actionModePasteDrawable" />

    </LinearLayout>




</LinearLayout>
