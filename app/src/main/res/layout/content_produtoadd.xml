<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityProdutoAdd"
    tools:showIn="@layout/activity_produtoadd"
    android:background="@drawable/botao_customizado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewProdAdd"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            />

        <EditText
            android:id="@+id/editTextObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Obsevação"
            android:background="@drawable/edit_customizado"
            android:inputType="textPersonName"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editQuant"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:background="@drawable/edit_customizado"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/imageButtonMais"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/botao_customizado"
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageButton
                android:id="@+id/imageButtonMenos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/botao_customizado"
                app:srcCompat="@drawable/ic_baseline_remove_24" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>